# Description:	Free library for arbitrary precision arithmetic
# URL:		http://gmplib.org/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com

name=gmp
version=6.2.0
release=0
source=(http://ftpmirror.gnu.org/gnu/${name}/${name}-${version}.tar.xz)

build() {
	cd ${name}-${version}

	./configure \
		--prefix=/usr \
		--enable-cxx

	make

	make DESTDIR=$PKG install

	rm -r $PKG/usr/share
}
