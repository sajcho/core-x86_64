# Description:	The C library used in the GNU system
# URL:		http://www.gnu.org/software/libc/
# Maintainer:	sajcho, saux dot aarch64 at gmail dot com
# Depends on:	python3 texinfo

name=glibc
version=2.35
release=1
source=(https://ftpmirror.gnu.org/gnu/${name}/${name}-${version}.tar.xz \
	https://cdn.kernel.org/pub/linux/kernel/v5.x/linux-5.15.2.tar.xz \
	hosts resolv.conf nsswitch.conf host.conf ld.so.conf)

build() {
	# install kernel headers
	cd linux-5.15.2

	make mrproper
	make INSTALL_HDR_PATH=$PKG/usr headers_install
	chown -R root:root $PKG/usr

	cd $SRC/${name}-${version}

	CFLAGS="${CFLAGS/ -flto=auto -ffat-lto-objects/}"
	CXXFLAGS="${CXXFLAGS/ -flto=auto -ffat-lto-objects/}"

	mkdir build
	cd build

	../configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--with-headers=$PKG/usr/include \
		--enable-shared \
		--enable-kernel=4.9.0 \
		--enable-tunables \
		--enable-bind-now \
		--enable-stack-protector=strong \
		--enable-cet \
		--disable-build-nscd \
		--disable-nscd \
		--disable-profile \
		--disable-werror \
		--disable-multi-arch \
		--disable-timezone-tools \
		--with-pkgversion="SAUX x86_64" \
		--without-gd \
		--build=$CHOST \
		--host=$CHOST \
		libc_cv_slibdir=/lib

	make V=1

	# Optional
	#make -k check < /dev/null || :

	make install_root=$PKG install

	install -m 0644 $SRC/{hosts,resolv.conf,nsswitch.conf,host.conf,ld.so.conf} $PKG/etc
	ln -sf ../usr/share/zoneinfo/UTC $PKG/etc/localtime
	install -d $PKG/etc/ld.so.conf.d $PKG/usr/lib/locale
	touch $PKG/etc/ld.so.cache

	rm -r $PKG/usr/share/{info,locale}
}
